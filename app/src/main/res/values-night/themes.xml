<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication" parent="Theme.Material3.Dark.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="android:windowBackground">@color/background_dark</item>
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
    </style>

    <!-- Toolbar Style -->
    <style name="AppToolbarStyle" parent="Widget.MaterialComponents.Toolbar">
        <!-- Customize toolbar background -->
        <item name="android:background">@color/primary_color</item>

        <!-- Customize title text appearance -->
        <item name="android:textAppearance">@style/AppToolbarTitleText</item>
    </style>

    <!-- Toolbar Title Text Style -->
    <style name="AppToolbarTitleText" parent="TextAppearance.MaterialComponents.Headline6">
        <!-- Customize title text color -->
        <item name="android:textColor">@color/toolbar_title_color</item>
    </style>

    <style name="ThemeOverlay.MyApplication.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

</resources>
